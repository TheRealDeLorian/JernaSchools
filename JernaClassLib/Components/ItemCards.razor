@for (int i = 0; i < items.Count; i++)
    {
        if ((i % 2) == 1) //Every second time print two of them.
        {
            <div class="container">
                <div class="row" style="padding: 1em;">
                    <ItemCard item="items[i - 1]" addItemToCart="addItemToCart" />
                    <ItemCard item="items[i]" addItemToCart="addItemToCart" />
                </div>
            </div>
        }

        if ((items.Count % 2 == 1) && (i == items.Count - 1)) //This is used to print the last item if there isn't an even amount of items.
        {
            <div class="container">
                <div class="row" style="padding: 1em;">
                    <ItemCard item="items[i]" addItemToCart="addItemToCart" />
                </div>
            </div>
        }
    }

@code {
    [Parameter, EditorRequired]
    public List<Item> items { get; set; } = null!;
    [Parameter, EditorRequired]
    public Func<int, Task> addItemToCart { get; set; } = null!;
}
